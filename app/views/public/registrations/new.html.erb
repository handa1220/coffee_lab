<%= render "public/shared/header" %>

<div class="container-fluid" >
  <div class="row">
    <div class="col">
      <h1>Sign In</h1>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_registration_path, id: "new_customer", class: "new_customer" do |f| %>
    <div class="form-group row">
      <%= f.label :name, "ユーザー名", class: "col" %>
      <%= f.text_field :name, class: "col" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col" %>
      <%= f.text_field :email, class: "col" %>
    </div>
    <div class="form-group row">
      <%= f.label :age, "年代", class: "col" %>
      <%= f.select :age, Customer.ages_i18n.invert, {}, {class: "form-control"} %>
    </div>
    <div class="form-group row">
      <%= f.label :password, "パスワード", class: "col-md-4" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col" %>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation, "パスワード(確認用)" ,autocomplete: "new-password", class: "col-md-4" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="form-group row">
      <%= f.submit "　新規登録　", class: "btn btn-success" %>
    </div>

  <% end %>

  <div class="row p-3">
    <div class="col">
      <span class="h4 bg-light">　既に登録済みの方　</span>
    </div>
  </div>
  <div class="row">
    <div class="col offset-md-1">
      <ins>
        <%= link_to "こちら", new_customer_session_path %>
      </ins>
    </div>
  </div>

</div>



