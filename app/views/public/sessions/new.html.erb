<%= render "public/shared/header" %>

<div class="container-fluid" >
  <div class="row">
    <div class="col">
      <h1>Log In</h1>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_session_path, id: "new_customer", class: "new_customer" do |f| %>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col" %>
      <%= f.text_field :email, class: "col" %>
    </div>
    <div class="form-group row">
      <%= f.label :password, "パスワード", class: "col-md-4" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col" %>
    </div>
    <div class="form-group row">
      <%= f.submit "　ログイン　", class: "btn btn-success" %>
    </div>

  <% end %>

  <div class="row p-3">
    <div class="col">
      <span class="h4 bg-light">　新規登録は　</span>
    </div>
  </div>
  <div class="row">
    <div class="col offset-md-1">
      <ins>
        <%= link_to "こちら", new_customer_session_path %>
      </ins>
    </div>
  </div>

</div>
